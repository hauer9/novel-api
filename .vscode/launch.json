{
    "version": "0.2.0",
    "configurations": [{
        "type": "node",
        "request": "attach",
        "name": "Node: Nodemon",
        "restart": true,
        "protocol": "inspector",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": [
            "${workspaceFolder}/node_modules/**/*.js",
            "${workspaceFolder}/node_modules/**/*.ts",
            "<node_internals>/**/*.js"
        ]
    }]
}